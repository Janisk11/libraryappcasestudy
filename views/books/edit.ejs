<div class="container">
    <div class="group_form ">
        <div>
            <h2 class="text-center">Edit Book</h2>
        </div>
        <br>

        <div>
            <form class="new_entry" action="/books" method="POST" enctype="multipart/form-data">
            
                <div class="mb-3">
                    <label  for="">Book Title</label>
                    <input  type="text" name="title" value="<%=book.title %>" required >
                </div>
                <br>
                <div class="mb-3">
                    <label  for="">Author</label>
                    <input  type="text" name="author" value="<%=book.author %>" required >
                        
                </div>
                <br>
                <div class="mb-3">
                    <label  for="">Genre</label>
                    <input  type="text" name="genre" value="<%=book.genre %>" required >
                        
                </div>
                <br>
                <div class="mb-3">
                    <label  for="">Published Date</label>
                    <input  type="date" name="date" value="<%=book.date %>" required >
                        
                </div>
                <br>
                <div class="mb-3 ">
                    <label  for="" class="form-label">Image</label>
                    <input  type="file" name="image" value="<%=book.image %>" required  >

                </div>
                <br>
                <div class="row">
                    <div class="col-6 text-start">
                        <a href="/books"> Cancel</a>
                    </div>
                    <div class="col-6 text-end">
                        <button type="submit" class="submit_btn ">Update</button>
                    </div>
                
            
                </div>
            </form>


        </div>
    </div>
    

</div>





