<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Books</h3>
        </div>
        <div class="card-body">

            <%for(i=0;i<books.length;i++){%>
                <br>

                <div class="row">
                    <br>

                    <div class="col-md-2 col-sm-3 text-center">
                        <a class="story-title" href="#"><img alt="" src="/uploads/images/<%=books[i].image%>" style="width:100px;height:100px" class="img-circle"></a>
                    </div>
                    <div class="col-md-8 col-sm-7">
                        <h3><%=books[i].title%></h3>

                        <div class="row">
                            <div class="col-xs-9">
                                <h4><span class="label label-default"><%=books[i].author%></span></h4>
                                <h4>
                                    
                                    <small><a href="/books/<%=books[i]._id%>"class="text-muted">Read More</a></small>
                                </h4>
                            </div>
                            <div class="col-xs-3"></div>
                        </div>
                        <br><br>

                    </div>
                    <div class="col-md-2 col-sm-2 text-center">
                        <a href="/books/<%=books[i]._id%>/edit"><button class=" btn ">Update</button></a>
               
                       
                        <form action='/books/<%=books[i]._id%>?_method=DELETE' method="POST" >
                            <button type="submit" class="btn ">Delete</button>
                        </form>
                    </div>
                   
                </div>
                <hr>

                <%}%>

        </div>
    </div>
</div>

  