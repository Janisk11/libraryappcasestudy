<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 text-start">
                    <h3 style=" margin-left: 25px;">Authors</h3>
                </div>
                <div class="col-6 text-end">
                    <a style="color: azure; margin-right: 25px;"  href="/authors/new"><button class="add_btn">Add Authors</button></a>
                    
                </div>
            </div>
        </div>
        <div class="card-body">

            <%for(i=0;i<authors.length;i++){%>
                <br>

                <div class="row">
                    <br>

                    <div class="col-md-2 col-sm-3 text-center">
                        <a class="story-title" href="#"><img alt="" src="/uploads/images/<%=authors[i].image%>" style="width:100px;height:100px" class="img-circle"></a>
                    </div>
                    <div class="col-md-8 col-sm-7">
                        <h3><%=authors[i].name%></h3>

                        <div class="row">
                            <div class="col-xs-9">
                                    
                                <small><a href="/authors/<%=authors[i]._id%>"class="text-muted">Read More</a></small>
                            </div>
                            <div class="col-xs-3"></div>
                        </div>
                        <br><br>

                    </div>
                    <div class="col-md-2 col-sm-2 text-center">
                        <a href="/authors/<%=authors[i]._id%>/edit"><button class="editbook btn addbtn">Update</button></a>
               
                       
                        <form action='/authors/<%=authors[i]._id%>?_method=DELETE' method="POST" >
                            <button type="submit" class="delete btn ">Delete</button>
                        </form>
                    </div>
                   
                </div>
                <hr>

                <%}%>

        </div>
    </div>
</div>

  