<div class="container">
    <div class="group_form ">
        <div>
            <h2 class="text-center">New Author</h2>
        </div>
        <br>

        <div>
            <form  action="/authors" method="POST" enctype="multipart/form-data">
            
                <div class="mb-3">
                    <label  for="">Name</label>
                    <input type="text" name="name"  required >
                </div>
                <br>
                <div class="mb-3">
                    <label  for="">About</label>
                        <textarea style="width: 100%;" type="text" name="about" cols="30" rows="5"  required ></textarea>
                
                </div>
                <br>
                <div class="mb-3 ">
                    <label  for="" class="form-label">Image</label>
                    <input  type="file" name="image"  required  >

                </div>
                <br>
                <div class="row">
                    <div class="col-6 text-start">
                        <a href="/authors"> Cancel</a>
                    </div>
                    <div class="col-6 text-end">
                        <button type="submit" class="submit_btn ">Add</button>
                    </div>
                
            
                </div>
            </form>


        </div>

    </div>
    

</div>





